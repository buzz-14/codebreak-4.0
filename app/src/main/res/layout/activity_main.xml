<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3DDDD"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"

            >

            <TextView
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:gravity="center"
                android:padding="14dp"
                android:paddingEnd="10dp"
                android:text="Network Indices"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:fontFamily="@font/ubuntumedium"
                android:textSize="35dp" />
        </soup.neumorphism.NeumorphCardView>


        <soup.neumorphism.NeumorphImageButton
            android:id="@+id/b1"
            style="@style/Widget.Neumorph.FloatingActionButton"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/logowifi1"
            android:textColor="@color/text_color"
            app:neumorph_shadowElevation="7dp"
            app:neumorph_shapeType="flat">


        </soup.neumorphism.NeumorphImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"

            android:text="GO"

            android:textSize="30dp" />

        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:gravity="center"
                android:padding="14dp"
                android:paddingEnd="20dp"
                android:text="For assessing the quality of the Wi-Fi signal in the area, it's best to keep the phone next to the appliance."
                android:textColor="@color/text_color"
                android:fontFamily="@font/ubuntulight"
                android:textColorHint="@color/text_color"
                android:textSize="22dp" />
        </soup.neumorphism.NeumorphCardView>
    </LinearLayout>


</RelativeLayout>
